<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <div class='panel panel-login'>
      <div class='panel-heading'>
        <h4>Registration</h4>
        <hr>
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-lg-12'>
            <%= form_for @user do |f| %>
              <% if @user.errors.present? %>
                <div class='errors'>
                  <ul>
                    <% @user.errors.full_messages.each do |error_message| %>
                      <li><%= error_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class='form-group'>
                <label for='name' class='cols-sm-2 control-label'>Full Name</label>
                <div class='form-group'>
                  <%= f.text_field :full_name, class: 'form-control', placeholder: 'Full Name' %>
                </div>
              </div>
              <div class='form-group'>
                <label for='name' class='cols-sm-2 control-label'>Email</label>
                <div class='form-group'>
                  <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email' %>
                </div>
              </div>
              <div class='form-group'>
                <label for='name' class='cols-sm-2 control-label'>Password</label>
                <div class='form-group'>
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                </div>
              </div>
              <hr/>
              <div class='form-group'>
                <div class='row'>
                  <div class='col-sm-6 col-sm-offset-3'>
                    <%= f.submit 'Create Account', class: 'form-control btn btn-success' %>
                  </div>
                </div>
              </div>
              <div class='form-group'>
                <div class='row'>
                  <div class='col-lg-12'>
                    <div class='text-center'>
                      <%= link_to 'Login', sign_in_path %>&nbsp;|
                      <%= link_to 'Forgot Password?', new_password_path %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>