<%= form_for item do |f| %>
  <% if item.errors.present? %>
    <div class='errors'>
      <ul>
        <% item.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="name" class="cols-sm-2 control-label">Name <small>*</small></label>
    <div class="form-group">
      <%= f.text_field :name, value: item.name, class: 'form-control', placeholder: 'Name of the Item', required: true, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="cols-sm-2 control-label">Price <small>*</small></label>
    <div class="form-group">
      <%= f.text_field :price, value: item.price, class: 'form-control', placeholder: 'Price of the Item', required: true, pattern: '^\d+(\.\d+)?$' %>
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="cols-sm-2 control-label">Quantity <small>*</small></label>
    <div class="form-group">
      <%= f.text_field :quantity, type: "number", value: item.new_record? ? nil : item.quantity, class: 'form-control', placeholder: 'No of the Items', required: true, pattern: '^\d+$' %>
    </div>
  </div>
  <br/>
  <hr/>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 pull-right">
        <%= f.submit item.new_record? ? 'Create' : 'Update', class: "form-control btn btn-success" %>
      </div>
      <div class="col-sm-3 pull-right">
        <%= link_to "Cancel", admin_dashboard_path, class: 'form-control btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
