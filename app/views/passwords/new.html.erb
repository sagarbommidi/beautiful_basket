<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login">
      <div class="panel-heading">
        <h4>Registration</h4>
        <hr>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for :password, url: passwords_path do |f| %>
              <div class="form-group">
                <label for="name" class="cols-sm-2 control-label">Email</label>
                <div class="form-group">
                  <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: "Email" %>
                </div>
              </div>
              <hr/>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <%= f.submit "Send Confirmation Email", class: "form-control btn btn-success" %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <%= link_to "Login", sign_in_path %>&nbsp;|
                      <%= link_to "Create New Account", sign_up_path %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>