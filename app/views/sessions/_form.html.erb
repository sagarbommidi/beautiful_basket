<%= form_for :session, url: session_path do |f| %>
  <div class='form-group'>
    <label for='name' class='cols-sm-2 control-label'>Email</label>
    <div class='form-group'>
      <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email' %>
    </div>
  </div>
  <div class='form-group'>
    <label for='name' class='cols-sm-2 control-label'>Password</label>
    <div class='form-group'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>
  </div>

  <hr/>
  <div class='form-group'>
    <div class='row'>
      <div class='col-sm-6 col-sm-offset-3'>
        <%= f.submit 'Login', class: 'form-control btn btn-success' %>
      </div>
    </div>
  </div>
  <div class='form-group'>
    <div class='row'>
      <div class='col-lg-12'>
        <div class='text-center'>
          <%= link_to 'Create New Account', sign_up_path %>&nbsp;|
          <%= link_to 'Forgot Password?', new_password_path %>
        </div>
      </div>
    </div>
  </div>
<% end %>
